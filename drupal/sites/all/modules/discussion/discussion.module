}

function _get_discussion_parent($node) {
  if (isset($node->field_reply_to[LANGUAGE_NONE][0]['target_id'])) {
    $node = node_load($node->field_reply_to[LANGUAGE_NONE][0]['target_id']);
    $node = _get_discussion_parent($node);
  }

  return $node;
}
