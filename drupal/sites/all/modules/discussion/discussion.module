function _build_user_block() {
  global $user;
  $user = user_load($user->uid);

  $str = '<div class="user-img">' . theme('image_style', array('style_name' => 'user_img_normal', 'path' => $user->picture->uri)) . '</div>';
  $str .= '<h3>' . $user->name . '</h3>';

  return array('#markup' => $str);
}
