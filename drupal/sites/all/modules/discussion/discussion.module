function _sort_entities_by_created($a, $b) {
  if ($a->created == $b->created) {
    return 0;
  }
  return ($a->created < $b->created) ? 1 : -1;
}

function _build_discussion_thread($org_node, $view_mode, $langcode) {
  $build = array();

  $query = new EntityFieldQuery();
  $query->entityCondition('entity_type', 'node');
  $query->entityCondition('bundle', 'discussion');
  $query->fieldCondition('field_reply_to', 'target_id', $org_node->nid);
  $results = $query->execute();

  if (isset($results['node'])) {
    $nodes = node_load_multiple(array_keys($results['node']));

    foreach ($nodes as $node) {
      // Populate $node->content with a render() array.
      node_build_content($node, $view_mode, $langcode);
      $node_content = $node->content;
      // We don't need duplicate rendering info in node->content.
      unset($node->content);

      $node->thread = _build_discussion_thread($node, 'discussion_replies', $langcode);

      $node_content += array(
        '#theme' => 'node',
        '#node' => $node,
        '#view_mode' => $view_mode,
        '#language' => $node->language,
      );

      // Allow modules to modify the structured node.
      $type = 'node';
      drupal_alter(array('node_view', 'entity_view'), $node_content, $type);

      $build[] = array(
        'node' => $node_content,
        //'children' => _build_discussion_thread($node, $view_mode, $langcode)
      );
    }
  }

  return $build;
}

function _pull_latest_content($group = NULL, $offset = 0, $limit = 10, $content_type = '') {
  $items = array();
  $groups = array();

  if ($group == NULL) {
    $groups = Group::getCurrentUserGroups();
  }
  elseif (is_a($group, 'Group')) {
    $groups = array($group->gid => $group);
  }

  if (!empty($groups)) {

    $q = db_select('discussion_group_content', 'dgc');
    $q->join('node', 'n', 'dgc.eid = n.nid');
    $q->addField('n', 'created', 'node_created');

    $q->fields('dgc')
    ->fields('n', array('created'))
    ->condition('gid', array_keys($groups), 'IN');

    $q->orderBy('n.created', 'DESC');

    if ($content_type != '' && is_string($content_type)) {
      $q->condition('entity_bundle', $content_type);
    }

    if ($offset == NULL && $limit == NULL) {
      //$q->count();
      //$results = $q->execute();
      //return $results;

      $cq = $q->countQuery();
      $r = $cq->execute()->fetchAssoc();
      return $r['expression'];
    }
    else {
      $q->range($offset, $limit);
    }

    $result = $q->execute();
    while($gc = $result->fetchAssoc()) {
      $func = $gc['entity_type'] . '_load';

      if ($i = $func($gc['eid'])) {
        $i->__nc = $gc['entity_type'];
        $items[$i->nid] = $i;
      }
    }


/*
    $query->propertyOrderBy('created', 'DESC');
    $results = $query->execute();

    if (isset($results['group_content'])) {
      $group_contents = entity_load('group_content', array_keys($results['group_content']));

      foreach ($group_contents as $gc) {
        $func = $gc->entity_type . '_load';
        if ($i = $func($gc->eid)) {
          $i->__nc = $gc->entity_type;
          $items[$i->nid] = $i;
        }
      }
    }
*/

  }

  return $items;
}

